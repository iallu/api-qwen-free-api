{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*", "libs.d.ts"],
    "exclude": ["node_modules", "dist"]
}